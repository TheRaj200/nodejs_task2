<!-- views/partials/userDetails.ejs -->
<div class="flex w-[35%] flex-col">
    <% if(user) { %>
        <div class="user px-8 rounded-lg bg-gray-800 p-2 mt-3 gap-3">
            <h1 class="text-2xl py-4">User Details</h1>
            <h3 class="text-xl tracking-tighter">Firstname: <%= user.firstname %></h3>
            <h3 class="text-xl tracking-tighter">Lastname: <%= user.lastname %></h3>
            <h3 class="text-xl tracking-tighter">Email: <%= user.email %></h3>
            <h3 class="text-xl tracking-tighter">UserId: <%= user.LogIN %></h3>
            <h3 class="text-xl tracking-tighter">City: <%= user.City %></h3>
            <h3 class="text-xl tracking-tighter">Number: <%= user.number %></h3>
        </div>
    <% } %> 
</div>
